<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.victu.foodatory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".user.App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ResultActivity"/>
        <activity android:name=".gallery.TestActivity"/>
        <activity android:name=".SearchActivity" />
        <activity
            android:label="My Gallery"
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".gallery.GalleryActivity"
            ></activity>
        <activity android:name=".user.SignUpActivity" />
        <activity android:name=".user.EmailLoginActivity" />
        <activity android:name=".detail.IngredientDetailActivity" />
        <activity android:name=".detail.FoodDetailActivity" />
        <activity android:name=".camera.CameraResultActivity" />
        <activity android:name=".camera.CameraActivity" />
        <activity android:name=".user.MyBodyActivity" />
        <activity android:name=".user.MyBodyActivity2" />
        <activity android:name=".user.MyBodyActivity3" />
        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".user.LoginActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 사진 자동 업로드를 위한 JobService -->
        <service
            android:name=".gallery.PhotoJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>